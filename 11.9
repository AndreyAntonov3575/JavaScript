JS

const form = document.getElementById('surveyForm');
const results = document.getElementById('results');

const resultName = document.getElementById('resultName');
const resultEmail = document.getElementById('resultEmail');
const resultGender = document.getElementById('resultGender');
const resultRating = document.getElementById('resultRating');
const resultInterests = document.getElementById('resultInterests');
const resultComments = document.getElementById('resultComments');

const nameInput = document.getElementById('name');
const emailInput = document.getElementById('email');
const genderInputs = document.querySelectorAll('input[name="gender"]');
const interestsInputs = document.querySelectorAll('input[name="interests"]');

const nameError = document.getElementById('nameError');
const emailError = document.getElementById('emailError');
const emailFormatError = document.getElementById('emailFormatError');
const genderError = document.getElementById('genderError');
const interestsError = document.getElementById('interestsError');

const ratingInput = document.getElementById('rating');

form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    resetErrors();
    
    let isValid = true;
    
    const isNameEmpty = !nameInput.value.trim();
    const isEmailEmpty = !emailInput.value.trim();
    const isEmailInvalid = !isValidEmail(emailInput.value);
    
    if (isNameEmpty) {
        showError(nameInput, nameError);
        isValid = false;
    }

    if (!isNameEmpty && isEmailEmpty) {
        showError(emailInput, emailError);
        isValid = false;
    } else if (!isEmailEmpty && isEmailInvalid) {
        showError(emailInput, emailFormatError);
        isValid = false;
    }
    
    let genderSelected = false;
    genderInputs.forEach(input => {
        if (input.checked) genderSelected = true;
    });
    
    if (!genderSelected) {
        showError(null, genderError);
        isValid = false;
    }
    
    let interestsSelected = false;
    interestsInputs.forEach(input => {
        if (input.checked) interestsSelected = true;
    });
    
    if (!interestsSelected) {
        showError(null, interestsError);
        isValid = false;
    }
    
    if (isValid) {
        displayResults();
    }
});

function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}

function showError(input, errorElement) {
    if (input) {
        input.classList.add('input-error');
    }
    errorElement.style.display = 'block';
}

function resetErrors() {
    nameInput.classList.remove('input-error');
    emailInput.classList.remove('input-error');
    
    nameError.style.display = 'none';
    emailError.style.display = 'none';
    emailFormatError.style.display = 'none';
    genderError.style.display = 'none';
    interestsError.style.display = 'none';
}

function displayResults() {
    const name = nameInput.value;
    const email = emailInput.value;
    
    let gender = '';
    genderInputs.forEach(input => {
        if (input.checked) gender = input.value;
    });
    
    const rating = ratingInput.value;
    
    let interests = [];
    interestsInputs.forEach(input => {
        if (input.checked) interests.push(input.value);
    });
    
    const comments = document.getElementById('comments').value;
    
    resultName.textContent = name;
    resultEmail.textContent = email;
    resultGender.textContent = gender;
    resultRating.textContent = `${rating}/10`;
    resultInterests.textContent = interests.join(', ');
    resultComments.textContent = comments;
    
    results.style.display = 'block';
    results.scrollIntoView({ behavior: 'smooth' });
}

nameInput.addEventListener('input', function() {
    if (this.value.trim()) {
        this.classList.remove('input-error');
        nameError.style.display = 'none';
    }
});

emailInput.addEventListener('input', function() {
    if (this.value.trim()) {
        this.classList.remove('input-error');
        emailError.style.display = 'none';
        emailFormatError.style.display = 'none';
    }
});

genderInputs.forEach(input => {
    input.addEventListener('change', function() {
        genderError.style.display = 'none';
    });
});

interestsInputs.forEach(input => {
    input.addEventListener('change', function() {
        let interestsSelected = false;
        interestsInputs.forEach(input => {
            if (input.checked) interestsSelected = true;
        });
        
        if (interestsSelected) {
            interestsError.style.display = 'none';
        }
    });
});



