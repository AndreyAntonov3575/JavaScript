const form = document.getElementById('deliveryForm');
const tableBody = document.getElementById('productsTableBody');
const valueError = document.getElementById('valueError');

const nameInput = document.getElementById('productName');
const weightInput = document.getElementById('productWeight');
const distanceInput = document.getElementById('deliveryDistance');

const nameError = document.getElementById('nameError');
const weightError = document.getElementById('weightError');
const distanceError = document.getElementById('distanceError');

form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    resetErrors();
    
    let isValid = true;
    let hasNegativeValues = false;
    
    if (!nameInput.value.trim()) {
        showError(nameError);
        isValid = false;
    }
    
    const weight = parseFloat(weightInput.value);
    if (!weightInput.value || weight <= 0) {
        showError(weightError);
        isValid = false;
        if (weight < 0) {
            hasNegativeValues = true;
        }
    }
    
    const distance = parseFloat(distanceInput.value);
    if (!distanceInput.value || distance <= 0) {
        showError(distanceError);
        isValid = false;
        if (distance < 0) {
            hasNegativeValues = true;
        }
    }
    
    if (hasNegativeValues) {
        valueError.style.display = 'block';
    }
    
    if (isValid) {
        addProductToTheTable(nameInput.value.trim(), weight, distance);
        form.reset();
    }
});

function showError(errorElement) {
    errorElement.style.display = 'block';
}

function resetErrors() {
    nameError.style.display = 'none';
    weightError.style.display = 'none';
    distanceError.style.display = 'none';
    valueError.style.display = 'none';
}

function addProductToTheTable(name, weight, distance) {
    const deliveryCost = (weight * distance) / 10;
    
    const newRow = document.createElement('tr');
    
    newRow.innerHTML = `
        <td>${name}</td>
        <td>${weight}</td>
        <td>${distance}</td>
        <td>${deliveryCost.toFixed(2)} руб.</td> `;
    
    tableBody.appendChild(newRow);
}

nameInput.addEventListener('input', function() {
    if (this.value.trim()) {
        nameError.style.display = 'none';
    }
});

weightInput.addEventListener('input', function() {
    const weight = parseFloat(this.value);
    if (this.value && weight > 0) {
        weightError.style.display = 'none';
    }
    valueError.style.display = 'none';
});

distanceInput.addEventListener('input', function() {
    const distance = parseFloat(this.value);
    if (this.value && distance > 0) {
        distanceError.style.display = 'none';
    }
    valueError.style.display = 'none';
});

