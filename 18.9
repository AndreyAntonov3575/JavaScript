JS

const catImages = [
    'Images/cat1.jpg',
    'Images/cat2.jpg',
    'Images/cat3.jpg'
];

const dogImages = [
    'Images/dog1.jpg',
    'Images/dog2.jpg',
    'Images/dog3.jpg'
];

function getCatImages() {
    return new Promise((resolve) => {
        const randomTime = Math.floor(Math.random() * 3000) + 2000;
        
        setTimeout(() => {
            resolve(catImages);
        }, randomTime);
    });
}

function getDogImages() {
    return new Promise((resolve) => {
        const randomTime = Math.floor(Math.random() * 3000) + 2000;
        
        setTimeout(() => {
            resolve(dogImages);
        }, randomTime);
    });
}

window.onload = function() {
    const container = document.getElementById('imagesContainer');
    
    const catPromise = getCatImages();
    const dogPromise = getDogImages();
    
    catPromise.then((images) => {
        const catRow = document.createElement('div');
        catRow.className = 'image-row';
        
        images.forEach(imagePath => {
            const img = document.createElement('img');
            img.src = imagePath;
            catRow.appendChild(img);
        });
        
        container.appendChild(catRow);
    });
    
    dogPromise.then((images) => {
        const dogRow = document.createElement('div');
        dogRow.className = 'image-row';
        
        images.forEach(imagePath => {
            const img = document.createElement('img');
            img.src = imagePath;
            dogRow.appendChild(img);
        });
        
        container.appendChild(dogRow);
    });
};



