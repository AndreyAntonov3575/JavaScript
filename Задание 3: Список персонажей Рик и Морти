JS

document.addEventListener('DOMContentLoaded', function() {
    let currentPage = 1;
    let totalPagesFromAPI = 1;
    const totalPagesInDesign = 59;
    
    initializeApp();
    
    function initializeApp() {
        hideAllNumbersBlocks();
        loadPage(currentPage);
        setupPaginationEventListeners();
    }
    
    async function loadPage(pageNumber) {
        try {
            const response = await fetch(`https://rickandmortyapi.com/api/character?page=${pageNumber}`);
            
            const data = await response.json();
            
            totalPagesFromAPI = data.info.pages;
            currentPage = pageNumber;
            
            const charactersToShow = data.results.slice(0, 10);
            
            renderSection1(charactersToShow.slice(0, 4));
            renderSection2(charactersToShow.slice(4, 8));
            renderSection3(charactersToShow.slice(8, 10));
            
            updateAllPagination();
            
        } catch (error) {

        }
    }
    
    function renderSection1(characters) {
        if (characters.length >= 2) {
            updateCharacterBlock('.section11', characters[0], 0);
            updateCharacterBlock('.section11', characters[1], 1);
        }
        if (characters.length >= 4) {
            updateCharacterBlock('.section12', characters[2], 0);
            updateCharacterBlock('.section12', characters[3], 1);
        }
    }
    
    function renderSection2(characters) {
        if (characters.length >= 2) {
            updateCharacterBlock('.section21', characters[0], 0);
            updateCharacterBlock('.section21', characters[1], 1);
        }
        if (characters.length >= 4) {
            updateCharacterBlock('.section22', characters[2], 0);
            updateCharacterBlock('.section22', characters[3], 1);
        }
    }
    
    function renderSection3(characters) {
        if (characters.length >= 1) {
            updateSingleCharacter('.section31', characters[0], true);
        }
        if (characters.length >= 2) {
            updateSingleCharacter('.section32', characters[1], false);
        }
    }
    
    function updateCharacterBlock(sectionSelector, character, positionIndex) {
        const isLeftCharacter = positionIndex === 0;
        const blockSuffix = isLeftCharacter ? '1' : '3';
        const statusSuffix = isLeftCharacter ? '2' : '4';
        
        const sectionNum = sectionSelector.includes('section1') ? '1' : 
                          sectionSelector.includes('section2') ? '2' : '3';
        
        const imgSelector = `${sectionSelector} img:nth-child(${positionIndex + 1})`;
        const nameSelector = `.section${sectionNum}${sectionSelector.slice(-1)}-text${blockSuffix} p:first-child`;
        const genderSelector = `.section${sectionNum}${sectionSelector.slice(-1)}-text${blockSuffix} p:nth-child(2)`;
        const statusSelector = `.section${sectionNum}${sectionSelector.slice(-1)}-text${statusSuffix} p:first-child`;
        const locationSelector = `.section${sectionNum}${sectionSelector.slice(-1)}-text${statusSuffix} p:nth-child(2)`;
        
        updateElement(imgSelector, 'src', character.image);
        updateElement(imgSelector, 'alt', character.name);
        updateElementText(nameSelector, character.name);
        updateElementText(genderSelector, character.gender);
        updateElementText(statusSelector, character.status);
        updateElementText(locationSelector, character.location.name);
        
        updateStatusColor(statusSelector, character.status);
    }
    
    function updateSingleCharacter(sectionSelector, character, isRick) {
        const sectionNum = '3';
        const blockNum = sectionSelector.slice(-1);
        const textBlock = isRick ? '1' : '3';
        const statusBlock = isRick ? '2' : '4';
        
        const imgSelector = `${sectionSelector} img`;
        const nameSelector = `.section${sectionNum}-text${textBlock} p:first-child`;
        const genderSelector = `.section${sectionNum}-text${textBlock} p:nth-child(2)`;
        const statusSelector = `.section${sectionNum}-text${statusBlock} p:first-child`;
        const locationSelector = `.section${sectionNum}-text${statusBlock} p:nth-child(2)`;
        
        updateElement(imgSelector, 'src', character.image);
        updateElement(imgSelector, 'alt', character.name);
        updateElementText(nameSelector, character.name);
        updateElementText(genderSelector, character.gender);
        updateElementText(statusSelector, character.status);
        updateElementText(locationSelector, character.location.name);
        
        updateStatusColor(statusSelector, character.status);
    }
    
    function updateAllPagination() {
        updateBlackZone('.blackZone11', currentPage);
        updateBlackZone('.blackZone21', currentPage);
        updateBlackZone('.blackZone31', currentPage);
        
        updateNumbersVisibility(currentPage);
    }
    
    function updateBlackZone(selector, currentPage) {
        const container = document.querySelector(selector);
        if (!container) return;
        
        const pageElements = container.querySelectorAll('p');
        if (pageElements.length < 7) return;
        
        const totalPages = Math.min(totalPagesFromAPI, totalPagesInDesign);
        
        let pagesToShow = [];
        
        if (currentPage <= 3) {
            pagesToShow = [1, 2, 3, 4, 5, 6, totalPages];
        } else if (currentPage >= totalPages - 2) {
            pagesToShow = [1, '...', totalPages-5, totalPages-4, totalPages-3, totalPages-2, totalPages];
        } else {
            pagesToShow = [1, '...', currentPage-1, currentPage, currentPage+1, '...', totalPages];
        }
        
        pageElements.forEach((element, index) => {
            if (index < pagesToShow.length) {
                element.textContent = pagesToShow[index];
                
                if (pagesToShow[index] === currentPage) {
                    element.style.fontWeight = '700';
                    element.style.fontSize = '18px';
                } else {
                    element.style.fontWeight = '400';
                    element.style.fontSize = '14px';
                }
                
                if (pagesToShow[index] === '...') {
                    element.style.cursor = 'default';
                } else {
                    element.style.cursor = 'pointer';
                }
            }
        });
    }
    
    function updateNumbersVisibility(currentPage) {
        hideAllNumbersBlocks();
        
        let selectorToShow = '';
        
        if (currentPage === 1) {
            selectorToShow = '.numbers1';
        } else if (currentPage === 2) {
            selectorToShow = '.numbers2';
        } else if (currentPage === 3) {
            selectorToShow = '.numbers3';
        } else if (currentPage >= 4 && currentPage <= 56) {
            selectorToShow = '.numbers4';
        } else if (currentPage === 57) {
            selectorToShow = '.numbers5';
        } else if (currentPage >= 58) {
            selectorToShow = '.numbers6';
        }
        
        if (selectorToShow) {
            const element = document.querySelector(selectorToShow);
            if (element) {
                element.style.display = 'flex';
                
                const pageElements = element.querySelectorAll('p');
                pageElements.forEach(p => {
                    const pageNum = parseInt(p.textContent);
                    if (!isNaN(pageNum)) {
                        if (pageNum === currentPage) {
                            p.style.fontWeight = '700';
                            p.style.fontSize = '18px';
                        } else {
                            p.style.fontWeight = '400';
                            p.style.fontSize = '14px';
                        }
                        p.style.cursor = 'pointer';
                    }
                });
            }
        }
    }
    
    function setupPaginationEventListeners() {
        setupBlackZoneListeners('.blackZone11');
        setupBlackZoneListeners('.blackZone21');
        setupBlackZoneListeners('.blackZone31');
        
        setupNumbersListeners('.numbers1');
        setupNumbersListeners('.numbers2');
        setupNumbersListeners('.numbers3');
        setupNumbersListeners('.numbers4');
        setupNumbersListeners('.numbers5');
        setupNumbersListeners('.numbers6');
    }
    
    function setupBlackZoneListeners(selector) {
        const container = document.querySelector(selector);
        if (!container) return;
        
        container.querySelectorAll('p').forEach(p => {
            p.addEventListener('click', function() {
                const text = this.textContent;
                if (text !== '...' && !isNaN(text)) {
                    const pageNum = parseInt(text);
                    if (pageNum >= 1 && pageNum <= totalPagesInDesign) {
                        loadPage(pageNum);
                    }
                }
            });
        });
    }
    
    function setupNumbersListeners(selector) {
        const container = document.querySelector(selector);
        if (!container) return;
        
        container.querySelectorAll('p').forEach(p => {
            p.addEventListener('click', function() {
                const text = this.textContent;
                if (text !== '...' && !isNaN(text)) {
                    const pageNum = parseInt(text);
                    if (pageNum >= 1 && pageNum <= totalPagesInDesign) {
                        loadPage(pageNum);
                    }
                }
            });
        });
    }
    
    function hideAllNumbersBlocks() {
        for (let i = 1; i <= 6; i++) {
            const element = document.querySelector(`.numbers${i}`);
            if (element) {
                element.style.display = 'none';
            }
        }
    }
    
    function updateElement(selector, attribute, value) {
        const element = document.querySelector(selector);
        if (element) {
            element[attribute] = value;
        }
    }
    
    function updateElementText(selector, text) {
        const element = document.querySelector(selector);
        if (element) {
            element.textContent = text;
        }
    }
    
    function updateStatusColor(selector, status) {
        const element = document.querySelector(selector);
        if (element) {
            if (status === 'Alive') {
                element.style.color = '#00BD4C';
            } else if (status === 'Dead') {
                element.style.color = '#E60000';
            } else {
                element.style.color = '#7B7B7B';
            }
        }
    }
});
